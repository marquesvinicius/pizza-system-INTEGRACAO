{
   "compilerOptions": {
     "target": "ES6",               // Compatível com ES6
     "module": "commonjs",          // Usa CommonJS
     "moduleResolution": "node",    // Resolve módulos como o Node.js
     "esModuleInterop": true,       // Interoperabilidade com módulos ES6
     "emitDecoratorMetadata": true, // Necessário para TypeORM
     "experimentalDecorators": true,// Necessário para TypeORM
     "outDir": "./dist",            // Saída para arquivos compilados
     "rootDir": "./src",            // Diretório de entrada
     "strict": true,                // Opção para checagem rigorosa de tipos
     "skipLibCheck": true           // Ignora verificação de tipos nas libs
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
 }
 